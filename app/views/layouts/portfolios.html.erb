<!DOCTYPE html>
<html>
  <head>
    <title> <%= @page_title %> </title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    

    <% if current_user.is_a?(User) %>
    	<%= link_to 'logout' , destroy_user_session_path , method: :delete %>
    <% else %>
    	<%= link_to 'login' , new_user_session_path  %>
    	<%= link_to 'register' , new_user_registration_path  %>
    <% end %>

	<%= yield %>

    <div>
      <div><%= link_to "HOME" , root_path %></div>
      <div><%= link_to "ABOUT ME" , itsme_rohan_path %></div>
      <div><%= link_to "CONTACT ME" , contact_path %></div>
      <div><%= link_to "SEE MY BLOG" , blogs_path %></div>
      <div><%= link_to "MY PORTFOLIO" , portfolios_path %></div>
    </div>

  <p>thanks for visiting me from <%= session[:source] %> </p>
  </body>
</html>

<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "ROHAN ARORA PORTFOLIO" , sticky: false , time: 1000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "ROHAN ARORA PORTFOLIO" , sticky: false , time: 1000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "ROHAN ARORA PORTFOLIO" , sticky: false , time: 1000) %>
<% end %>
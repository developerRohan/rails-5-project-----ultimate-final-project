<% unless current_user. is_a? GuestUser %>
  <%= form_for @comment, url: '#' do |f| %>
  <h2>Start Commenting</h2>
  <hr>
    <div class ="form-group">
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class ="form-group">
      <%= f.submit 'create comment' , class: 'btn btn-primary' %>
    </div>

  <% end %>
<% end %>